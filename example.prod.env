APP_ENV=prod
# Production DB (recommended: Postgres). Example:
# DATABASE_URL=postgresql+psycopg2://smartthingsapi:CHANGE_ME_PASSWORD@127.0.0.1:5432/smartthingsapi
DATABASE_URL=sqlite:///./smartthingsapi.db

# MUST change in production:
API_KEY_PEPPER=prod-CHANGE-ME
OAUTH_STATE_SECRET=prod-CHANGE-ME-TOO

# SmartThings OAuth (required for SaaS binding):
SMARTTHINGS_CLIENT_ID=
SMARTTHINGS_CLIENT_SECRET=
SMARTTHINGS_REDIRECT_URI=https://your-domain.com/oauth/smartthings/callback

# CORS: comma-separated origins
CORS_ALLOW_ORIGINS=https://your-frontend.com
